{% extends 'base.html.twig' %}

{% block title %}New Player{% endblock %}

{% block body %}
    <section class="container">
        <h1 class"text-center">Recherche avancée</h1>
        
        {{ form_start(search_form) }}
            {{ form_widget(search_form) }}
            <button class="btn btn-outline-primary">{{ button_label|default('Rechercher') }}</button>
        {{ form_end(search_form) }}
        <div style="margin-top:30px">
            <a href="{{ path('index') }}">Revenir à l'accueil</a>
        </div>
    </section>
        {% if app.request.method == 'POST' %}
        <h1 class="text-center">Liste des joueurs</h1>
            {% if players is empty %}
                <h2 class="text-center">Aucun résultat pour votre recherche</h2>
            {% else %}
            <table class="table">
                <thead>
                    <tr>
                        <th>Nom du joueur</th>
                        <th>Date de naissance</th>
                        <th>Nationalité</th>
                        <th>Poids</th>
                        <th>Prix éstimé</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for player in players %}
                    <tr>
                        <td>{{ player.name }}</td>
                        <td>{{ player.dateOfBirth ? player.dateOfBirth|date('d/m/Y') : '' }}</td>
                        <td>{{ player.nationality }}</td>
                        <td>{{ player.weight }} kg</td>
                        <td>{{ player.price }} €</td>
                        <td>
                            <a class="btn btn-outline-primary" href="{{ path('player_show', { 'id' : player.id }) }}">Fiche du joueur</a>
                            <a class="btn btn-outline-primary" href="{{ path('player_stats', {'player': player.id}) }}">Stats du joueur</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            {% endif %}
        {% endif %}
        
{% endblock %}